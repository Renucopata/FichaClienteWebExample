@model List<ModeloCartera>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/css/estilosficha.css" rel="stylesheet" />

    <script>
        function datoCredito(OP) {
            $.ajax({
                url: '@Url.Action("DetallesCartera","Peticiones")',
                type: 'POST',
                data: { "operacionCRE": OP },
                success: function (data) {
                    $("#PRE").val(data.respCre.numero_de_Prestamo);
                    $("#PLA").val(data.respCre.plazo);
                    $("#DEST").val(data.respCre.destino);
                    $("#TIP").val(data.respCre.tipo_de_Credito);
                    var fecha = new Date(data.respCre.fecha_de_Vencimiento);
                    var fev = fecha.toLocaleDateString('es-ES');
                    $("#FEV").val(fev);
                    $("#DI").val(data.respCre.dias_de_Incumplimiento);
                    $("#CAL").val(data.respCre.calificacion);
                    $("#CAEDEC").text(data.respCre.caedeC_Prestamo);
                    $("#REP").val(data.respCre.cantidad_de_Reprogramaciones);
                    fecha = new Date(data.respCre.fecha_de_Reprogramaciones);
                    var ferep = fecha.toLocaleDateString('es-ES');
                    if (ferep == '1/1/1999') {
                        ferep = "Sin fecha";
                    }
                    $("#FEREP").val(ferep);
                    $("#DV").val(data.respCre.dias_de_Pase_a_Vencido);
                    $("#SEGDEV").val(data.respCre.tiene_seguro_de_Desgravamen);
                    $("#DetallesCartera").modal("show");
                }, error: function (response) {
                    console.log(response.responseText);
                }
            });
        }

        $(document).ready(function () {
            $(".cerrar").click(function () {
                $("#DetallesCartera").modal("hide");
            });
        });
    </script>
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row bg-eco">
                <div class="offset-4 col-4">
                    <h4 class="mt-3 text-center text-white">ECO - CLIENTE</h4>
                </div>
                <div class="col-4">
                    <a asp-controller="Fichas" asp-action="Regreso" class="btn mt-2 ind-eco float-end"><i class="bi bi-house"></i></a>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="row mt-4">
                <div class="col-3">
                    <div class="row">
                        <label class="form-label">NOMBRE</label>
                        <textarea asp-for="@Model.ElementAt(0).Nombre_Titular" class="form-control" rows="2" readonly></textarea>
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">EDAD</label>
                        <input class="form-control" type="text" value="@ViewBag.edad" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">TELÉFONO/CELULAR</label>
                        <input asp-for="@Model.ElementAt(0).Nro_de_Celular" class="form-control" type="text" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">DIRECCIÓN</label>
                        <textarea asp-for="@Model.ElementAt(0).Direccion" rows="3" readonly class="form-control"></textarea>
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">ANTIGÜEDAD</label>
                        <input class="form-control" type="text" value="@ViewBag.antiguedad" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">RETENCIONES JUDICIALES</label>
                        <input type="text" readonly class="form-control" value="@ViewBag.retenciones Bs" />
                    </div>
                </div>
                <div class="col-1">
                    <div class="barraV"></div>
                </div>
                <div class="col-8">
                    <div class="row">
                        <h2 style="color:rgb(255,80,0)">Créditos</h2>
                        <div class="row barraH"></div>
                        <h4 class="mt-2">Detalle</h4>
                    </div>
                    <div class="row mt-2 justify-content-between">
                        <div class="col">
                            @foreach (var prestamos in Model)
                            {
                                decimal Amor = @prestamos.Monto_Desembolsado_en_Bolivianos - @prestamos.Saldo_en_Bolivianos;
                                <button type="button" class="btn btn-secondary me-1" onclick="datoCredito(@prestamos.Numero_de_Prestamo)">
                                    <i class="bi bi-asterisk"></i> @prestamos.Numero_de_Prestamo
                                </button>
                                <div class="tasa-eco me-1">
                                    Tasa <span style="font-size:105%">@String.Format("{0:n}",@prestamos.Tasa)</span> %
                                </div>
                                <textarea rows="3" style="font-size:90%">Monto: @String.Format("{0:n}",@prestamos.Monto_Desembolsado_en_Bolivianos)
                                                    Saldo: @String.Format("{0:n}",@prestamos.Saldo_en_Bolivianos)
                                                    Amortizado: @String.Format("{0:n}",@Amor)
                                </textarea>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

<div class="modal fade" id="DetallesCartera" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-eco">
                <h5 class="modal-title text-white" id="Credito">Detalles de Crédito</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-4">
                        <div class="input-group mt-3">
                            <span class="input-group-text">Plazo:</span>
                            <input class="form-control bg-white" type="text" id="PLA" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Préstamo:</span>
                            <input class="form-control bg-white" type="text" id="PRE" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Calificación:</span>
                            <input class="form-control bg-white" type="text" id="CAL" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Días Vencido:</span>
                            <input class="form-control bg-white" type="text" id="DV" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text" style="width:175px">Días Incumplimiento:</span>
                            <input class="form-control bg-white" type="text" id="DI" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text" style="width:175px">Reprogramación:</span>
                            <input class="form-control bg-white" type="text" id="REP" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Seguro Desgravamen:</span>
                            <input class="form-control bg-white" type="text" id="SEGDEV" readonly>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="input-group mt-3">
                            <span class="input-group-text">Tipo:</span>
                            <input class="form-control bg-white" type="text" id="TIP" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Destino:</span>
                            <input class="form-control bg-white" type="text" id="DEST" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">CAEDEC:</span>
                            <textarea class="form-control bg-white" rows="3" id="CAEDEC" readonly></textarea>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text" style="width:160px">Fecha Vencimiento:</span>
                            <input class="form-control bg-white" type="text" id="FEV" readonly>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Fecha Reprogramación:</span>
                            <input class="form-control bg-white" type="text" id="FEREP" readonly>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary cerrar" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>