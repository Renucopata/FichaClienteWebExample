@model ModeloTarjetas

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/css/estilosficha.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row bg-eco">
                <div class="offset-4 col-4">
                    <h4 class="mt-3 text-center text-white">ECO - CLIENTE</h4>
                </div>
                <div class="col-4">
                    <a asp-controller="Fichas" asp-action="Regreso" class="btn mt-2 ind-eco float-end"><i class="bi bi-house"></i></a>
                </div>
            </div>
        </div>
    </header>
    <section>
        <div class="container">
            <div class="row mt-4">
                <div class="col-3">
                    <div class="row">
                        <label class="form-label">NOMBRE</label>
                        <textarea asp-for="@Model.Nombre_Cliente" class="form-control" rows="2" readonly></textarea>
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">EDAD</label>
                        <input class="form-control" type="text" value="@ViewBag.edad" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">TELÉFONO/CELULAR</label>
                        <input class="form-control" type="text" value="@ViewBag.telefono" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">DIRECCIÓN</label>
                        <textarea rows="3" readonly class="form-control">@ViewBag.direccion</textarea>
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">ANTIGÜEDAD</label>
                        <input class="form-control" type="text" value="@ViewBag.antiguedad" readonly />
                    </div>
                    <div class="row mt-2">
                        <label class="form-label">RETENCIONES JUDICIALES</label>
                        <input type="text" readonly class="form-control" value="@ViewBag.retenciones Bs" />
                    </div>
                </div>
                <div class="col-1">
                    <div class="barraV"></div>
                </div>
                <div class="col-8">
                    <div class="row">
                        <h2 style="color:rgb(255,80,0)">Tarjetas de Crédito</h2>
                        <div class="row barraH"></div>
                        <h4 class="mt-2">Detalle en Bs</h4>
                    </div>
                    <div class="row mt-2 justify-content-between">
                        <div class="col">
                            <div class="tasa-eco me-1">
                                Tasa <span style="font-size:105%">@ViewBag.tasa</span> %
                            </div>
                            <textarea rows="2" style="vertical-align:middle">Límite: @ViewBag.importe
                                    Saldo: @ViewBag.saldo
                                </textarea>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-6">
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:195px">Días Incumplimiento:</span>
                                <input asp-for="Dias_de_Incumplimiento" class="form-control bg-white" type="text" readonly>
                            </div>
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:195px">Fecha Incumplimiento:</span>
                                <input class="form-control bg-white" type="text" value="@ViewBag.Finc" readonly>
                            </div>
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:195px">Interes Vigente/Vencido:</span>
                                <input class="form-control bg-white" type="text" value="@ViewBag.interes" readonly>
                            </div>
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:195px">Fecha Vencimiento:</span>
                                <input class="form-control bg-white" type="text" value="@ViewBag.Venc" readonly>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:125px">Calificación:</span>
                                <input asp-for="Calificacion" class="form-control bg-white" type="text" readonly>
                            </div>
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:125px">Estado:</span>
                                <input asp-for="Estado" class="form-control bg-white" type="text" readonly>
                            </div>
                            <div class="input-group mt-3">
                                <span class="input-group-text" style="width:125px">Estado Tarjeta:</span>
                                <input asp-for="Estado_Tarjeta" class="form-control bg-white" type="text" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>